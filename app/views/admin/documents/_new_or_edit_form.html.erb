<%= semantic_form_for @document, builder: ActiveAdmin::FormBuilder, url: "/admin/documents/#{@document.id}" do |f| %>
    <%= f.inputs do %>
        <%= f.input :name %>
        <%= f.input :subtopic %>
        <%= f.cktext_area :content, id: 'editor'%>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, :as => :button, :label => 'Submit' %>
        <%= f.action :cancel, :label => 'Back', :as => :link %>
    <% end %>
<% end %>